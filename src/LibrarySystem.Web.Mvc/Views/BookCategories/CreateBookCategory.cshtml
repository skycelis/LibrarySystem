@using LibrarySystem.Web.Models.BookCategories
@using LibrarySystem.Web.Controllers
@using LibrarySystem.BookCategories.Dto

@model CreateOrEditBookCategoryViewModel

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/BookCategories/CreateOrEditBookCategory.js" asp-append-version="true"></script>
    </environment>
}
<form name="CreateBookCategoryForm" role="form" class="form-horizontal">


    <div class="modal-body">
        <div>
            <h1 style="font-size:27px" class="col-md-3 col-form-label"><strong>Create Category</strong></h1>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="bg-opacity-5 py-2">
            <div class="form-validation">
                <div class="row g-1">
                    <div class="col-md-10 mb-10">
                        <div class="container tab-pane">
                            <div class="col-md-6 form-group row required">
                                <label for="Name" class="col-md-5 col-form-label">Name</label>
                                <div class="col-md-9">
                                    <input id="Name" type="text" name="Name" value="@Model.Name" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6 form-group row required">
                                <label for="BookCategoryDepartment" class="col-md-5 col-form-label">Department</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.DepartmentId, Model.ListDepartments.Select(d => new SelectListItem { Text = d.Name, Value = d.Id.ToString() }), "Select Department", new {@class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container my-3">
                    <div class="col-md-12">
                        <button id="Submit" type="submit" name="Submit" class="save-button btn btn-success btn-sm">Save</button>
                        <button id="Cancel" type="button" name="Cancel" class="cancel-button btn btn-secondary btn-sm">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>