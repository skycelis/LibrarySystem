@using LibrarySystem.Web.Models.BookCategories
@using LibrarySystem.Web.Controllers
@using LibrarySystem.BookCategories.Dto
@model BookCategoryListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/BookCategories/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h2><strong>@L("BookCategories")</strong></h2>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/BookCategories/CreateBookCategory">
                            <i class="fa fa-plus-circle"></i>
                            @L("Create")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="SearchBookCategoryForm" asp-controller="BookCategories" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-append">
                                                <input type="search" class="form-control rounded" name="SearchBookCategory" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                                                <a class="btn btn-outline-primary float-sm-right">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Department</th>
                                        <th style="width: 110px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bookcategory in Model.BookCategories)
                                    {
                                        <tr>
                                            <td>@bookcategory.Id</td>
                                            <td>@bookcategory.Name</td>
                                            <td>@bookcategory.Department?.Name</td>
                                            <td>
                                                <a class="edit-bookcat btn btn-dark btn-rounded" data-bookcat-id="@bookcategory.Id">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a class="btn bg-danger delete-bookcat" data-bookcat-id="@bookcategory.Id" data-bookcat-name="@bookcategory.Name">
                                                    <i class="fas fa-trash"></i> 
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

