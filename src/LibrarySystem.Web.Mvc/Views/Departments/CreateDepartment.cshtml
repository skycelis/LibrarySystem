@{
}
@using LibrarySystem.Web.Models.Departments

@Model CreateOrEditDepartmentViewModel

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/View/Department/CreateOrEditDepartment.js" asp-append-version="true"></script>
    </environment>
}
<form name="CreateDepartmentForm" role="form" class="form-horizontal">

    <div class="modal-body">
        <label style="font-size:24px" class="col-md-3 col-form-label">CreateDepartment</label>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row required">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="col-md-3 col-form-label" for="Name">Name</label>

                        <input id="Name" type="text" name="Name" value="@Model.Name" class="form-control" required>
                    </div>
                </div>


                <div class="row">
                    <button id="Submit" type="submit" name="Submit" class="btn bg-blue float-sm-right save-button" />
                    <button id="Cancel" type="button" name="Cancel" class="btn btn-sm bg-secondary cancel-button" />

                </div>
            </div>
        </div>
    </div>
</form>