@using LibrarySystem.Web.Models.Departments
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Departments.Dto

@model CreateOrEditDepartmentViewModel

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Department/CreateOrEditDepartment.js" asp-append-version="true"></script>
    </environment>
}
<form name="CreateDepartmentForm" role="form" class="form-horizontal">


    <div class="modal-body">
        <label style="font-size:24px" class="col-md-3 col-form-label">CreateDepartment</label>
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row required">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="col-md-3 col-form-label" for="Name">Name</label>

                        <input id="Name" type="text" name="Name" value="@Model.Name" class="form-control" required>
                    </div>
                </div>


                <div class="container my-3">
                    <div class="col-md-12">
                        <button id="Submit" type="submit" name="Submit" class="save-button btn btn-primary">Create</button>
                        <button id="Cancel" type="button" name="Cancel" class="btn bg-secondary cancel-button">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>