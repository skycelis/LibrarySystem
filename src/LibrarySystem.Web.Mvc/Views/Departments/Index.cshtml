@using LibrarySystem.Web.Models.Departments
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Departments.Dto
@model DepartmentListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Department/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h2><strong>@L("Departments")</strong></h2>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-success float-sm-right" href="/Departments/CreateDepartment">
                            <i class="fa fa-plus"></i> Create
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="SearchDepartmentForm" asp-controller="Departments" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-append">
                                                <input type="search" class="form-control rounded" name="SearchDepartment" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                                                <a class="btn btn-outline-success float-sm-right">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Department</th>
                                        <th style="width: 110px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var department in Model.Departments)
                                    {
                                        <tr>
                                            <td>@department.Id</td>
                                            <td>@department.Name</td>
                                            <td>
                                                <a class="edit-dept btn btn-dark btn-rounded" data-dept-id="@department.Id">
                                                    <i class="fas fa-pencil-alt"></i> 
                                                </a>
                                                <a class="btn btn-danger delete-dept" data-dept-id="@department.Id" data-dept-name="@department.Name">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

