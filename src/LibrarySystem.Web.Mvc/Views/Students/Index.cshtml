@using LibrarySystem.Web.Models.Students
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Students.Dto
@model StudentListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Students")</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Students/CreateStudent">
                            <i class="fa fa-plus-square"></i>
                            Create Student
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="SearchStudentForm" class="form-horizontal" asp-controller="Students" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="submit" class="btn bg-gradient-blue btn-search search-button">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <input class="form-control" type="text" name="SearchStudent" placeholder="Search" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StudentsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Contact Number</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.StudentName</td>
                                            <td>@student.StudentContactNumber</td>
                                            <td>@student.StudentEmail</td>
                                            <td>@student.Department?.Name</td>
                                            <td>
                                                <button type="button" class="edit-student btn btn-sm bg-secondary" data-student-id="@student.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-student" data-student-id="@student.Id" data-student-name="@student.StudentName">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

