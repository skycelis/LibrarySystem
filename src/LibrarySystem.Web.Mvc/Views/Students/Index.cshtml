@using LibrarySystem.Web.Models.Students
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Students.Dto
@model StudentListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h2><strong>@L("Students")</strong></h2>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn btn-success float-sm-right" href="/Students/CreateStudent">
                            <i class="fa fa-plus"></i> Create
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form name="SearchStudentForm" asp-controller="Students" asp-action="Index" method="get">
                                        <div class="input-group">
                                            <div class="input-group-append">
                                                <input type="search" class="form-control rounded" name="SearchStudent" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                                                <a class="btn btn-outline-success float-sm-right">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StudentsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Student</th>
                                        <th>Contact Number</th>
                                        <th>Email Address</th>
                                        <th>Department</th>
                                        <th style="width: 110px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.StudentName</td>
                                            <td>@student.StudentContactNumber</td>
                                            <td>@student.StudentEmail</td>
                                            <td>@student.Department?.Name</td>
                                            <td>
                                                <a class="edit-student btn btn-dark btn-rounded" data-student-id="@student.Id">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a class="btn btn-danger delete-student" data-student-id="@student.Id" data-student-name="@student.StudentName">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

