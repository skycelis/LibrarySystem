@using LibrarySystem.Web.Models.Books
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Books.Dto
@model BookListViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Books/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Books")</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Books/CreateBook">
                            <i class="fa fa-plus-square"></i>
                            @L("CreateBook")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>BookTitle</th>
                                        <th>BookPublisher</th>
                                        <th>BookAuthor</th>
                                        <th>IsBorrowed</th>
                                        <th>BookCategoryId</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Model.Books)
                                    {
                                        <tr>
                                            <td>@book.Id</td>
                                            <td>@book.BookTitle</td>
                                            <td>@book.BookPublisher</td>
                                            <td>@book.BookAuthor</td>
                                            <td>@book.IsBorrowed</td>

                                            <td>
                                                <button type="button" class="edit-book btn btn-sm bg-secondary" data-book-id="@book.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-book" data-book-id="@book.Id" data-book-name="@book.BookTitle">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

