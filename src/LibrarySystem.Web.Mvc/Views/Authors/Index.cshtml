@using LibrarySystem.Web.Models.Authors
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Authors.Dto
@model AuthorViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Authors/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Authors")</h1>
            </div>
            <div class="col-sm-6">

                @*  <a href="javascript:;" data-toggle="modal" data-target="#UserCreateModal" class="btn bg-blue float-sm-right">
                <i class="fa fa-plus-square"></i>
                @L("Create")
                </a>*@


            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Authors/CreateAuthor">
                            <i class="fa fa-plus-square"></i>
                            @L("CreateAuthor")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="UsersTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>

                                        <th>Book Title</th>


                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var author in Model.Authors)
                                    {
                                        <tr>
                                            <td>@author.Id</td>
                                            <td>@author.Name</td>
                                            <td>
                                                <button type="button" class="edit-author btn btn-sm bg-secondary" data-author-id="@author.Id">
                                                    <i class="fas fa-pencil-alt"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm bg-danger delete-author" data-author-id="@author.Id" data-author-name="@author.Name">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

