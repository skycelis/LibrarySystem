@using LibrarySystem.Web.Models.Authors
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Authors.Dto
@model AuthorViewModel


@section scripts{
    <environment names="Development">

        <script src="~/view-resources/Views/Authors/Index.js" asp-append-version="true"></script>

    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h2><strong>@L("Authors")</strong></h2>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">

                    <div class="card-header">
                        <a class="btn bg-blue float-sm-right" href="/Authors/CreateAuthor">
                            <i class="fa fa-plus-circle"></i>
                            @L("Create")
                        </a>
                        <div class="col-sm-6">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form id="authorSearchForm" class="form=horizontal">
                                        <div class="input-group">
                                            <div class="input-group-append">
                                                <input type="search" class="form-control rounded" name="Keyword" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                                                <a class="btn btn-outline-primary float-sm-left">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            @*<div class="col-md-6">
                                <div class="abp-advanced-search">
                                    <form id="authorSearchForm" class="form-horizontal">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <button type="submit" class="btn bg-blue btn-search">
                                                    <span class="fas fa-search" aria-hidden="true"></span>
                                                </button>
                                            </div>
                                            <input type="text" name="Keyword" class="form-control txt-search" />
                                        </div>
                                    </form>
                                </div>
                            </div>*@
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="AuthorsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

