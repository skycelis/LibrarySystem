@using LibrarySystem.Web.Models.Authors
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Authors.Dto

@model CreateOrEditAuthorViewModel

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Authors/CreateOrEditAuthor.js" asp-append-version="true"></script>
    </environment>
}
<form name="CreateAuthorForm" role="form" class="form-horizontal">


    <div class="modal-body">
        <label style="font-size:24px" class="col-md-3 col-form-label">CreateAuthor</label>
        <input type="hidden" name="Id" value="@Model?.Id" />
        <div class="form-group row required">
            <div class="col-12">
                @*<div class="row">*@
                    <div class="col-sm-3 form-group">
                        <label class="col-md-3 col-form-label" for="Name">Name</label>
                        <input id="Name" type="text" name="Name" value="@Model?.Name" class="form-control" required>
                    </div>
               @* </div>*@
                <div class="container my-3">
                    <div class="col-md-12">
                        <button id="Submit" type="submit" name="Submit" class="save-button btn btn-primary btn-sm">Create</button>
                        <button id="Cancel" type="button" name="Cancel" class="btn btn-secondary btn-sm cancel-button">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>