@using LibrarySystem.Web.Models.Borrowers
@using LibrarySystem.Web.Controllers
@using LibrarySystem.Borrowers.Dto

@model CreateOrEditBorrowersViewModel     

@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Borrowers/COEB.js" asp-append-version="true"></script>
    </environment>
}
<form name="CreateBorrowerForm" role="form" class="form-horizontal">


    <div class="modal-body">
        <div>
            <h1 style="font-size:27px" class="col-md-3 col-form-label"><strong>Create Borrower</strong></h1>
        </div>
        <input type="hidden" name="Id" value="@Model?.Id" />
        <div class="bg-opacity-5 py-2">
            <div class="form-validation">
                <div class="row g-1">
                    <div class="col-md-10 mb-10">
                        <div class="container tab-pane">
                            <div class="col-md-6 form-group row required">
                                <label for="BorrowDate" class="col-md-5 col-form-label">Borrow Date</label>
                                <div class="col-md-9">
                                    <input id="BorrowDate" type="date" class="form-control" name="BorrowDate" value="@Model?.BorrowDate.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            <div class="col-md-6 form-group row required">
                                <label for="ExpectedReturnDate" class="col-md-5 col-form-label">Expected Return Date</label>
                                <div class="col-md-9">
                                    <input id="ExpectedReturnDate" type="date" class="form-control" name="ExpectedReturnDate" value="@Model?.ExpectedReturnDate.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                            <div class="col-md-6 form-group row required">
                                <label for="ReturnDate" class="col-md-5 col-form-label">Return Date</label>
                                <div class="col-md-9">
                                    <input id="ReturnDate" type="date" class="form-control" name="ReturnDate" value="@Model?.ReturnDate">
                                </div>
                            </div>
                            <div class="col-md-6 form-group row required">
                                <label for="Books" class="col-md-5 col-form-label">Books</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.BookId, Model.Books.Select(d => new SelectListItem { Value= d.Id.ToString(), Text = d.BookTitle }), "Select Book Title", new {@class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6 form-group row required">
                                <label for="Students" class="col-md-5 col-form-label">Students</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.StudentId, Model.Students.Select(d => new SelectListItem { Value= d.Id.ToString(), Text = d.StudentName }), "Select Student Name", new {@class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container my-3">
                    <div class="col-md-12">
                        <button id="Submit" type="submit" name="Submit" class="save-button btn btn-primary">Save</button>
                        <button id="Cancel" type="button" name="Cancel" class="cancel-button btn bg-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>